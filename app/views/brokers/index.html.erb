<%# Brokers Index %>
<%= content_for :head do %>
  <%= stylesheet_link_tag 'datatables/css/jquery.datatables.css' %>
  <%= stylesheet_link_tag 'datatables/css/jquery.datatables_themeroller.css' %>
  <%#= stylesheet_link_tag 'x-editable/bootstrap3-editable/css/bootstrap-editable.css' %>
  <%#= stylesheet_link_tag 'bootstrap-datepicker/css/datepicker3.css' %>
<% end %>


    <div class="page-inner">
      <div class="page-breadcrumb">
        <ol class="breadcrumb container">
          <li><%= link_to "Home", root_path %></li>
          <li><%= link_to "Brokers", brokers_path, class: 'active' %></li>
        </ol>
      </div>
      <div class="page-title">
        <div class="container">
          <h3>Policies</h3>
        </div>
      </div>
      <div id="main-wrapper" class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="panel panel-white">
              <div class="panel-heading clearfix">
                <h4 class="panel-title">Policy Database</h4>
              </div>
              <div class="panel-body">
                <div class="table-responsive">
                  <table id="example" class="display table dataTable" style="width: 100%; cellspacing: 0;">
                    <thead>
                      <tr>
                        <th>Name</th>
                        <th>DBA</th>
                        <th>Contact Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Commission</th>
                        <th>Agreement Sent</th>
                        <th>Agreement Complete</th>
                        <th>Pac Risk Fee Schedule</th>
                        <th>Target Premium</th>
                        <th>Address</th>
                        <th>Notes</th>
                      </tr>
                    </thead>
                    <tfoot>
                      <tr>
                        <th>Name</th>
                        <th>Agency</th>
                        <th>Contact Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Commission</th>
                        <th>Agreement Sent</th>
                        <th>Agreement Complete</th>
                        <th>PAC Risk Fee Schedule</th>
                        <th>Target Premium</th>
                        <th>Address</th>
                        <th>Notes</th>
                      </tr>
                    </tfoot>
                    <tbody>
                      <% @brokers.each do |broker| %>
                        <tr>
                            <td><%= broker.name %></td>
                            <td><%= broker.dba %></td>
                            <td><%= broker.contact_name %></td>
                            <td><%= broker.email %></td>
                            <td><%= broker.phone %></td>
                            <td><%= broker.commission.to_s + "%" %></td>
                            <td><%= broker.agreement_sent %></td>
                            <td><%= broker.agreement_completed %></td>
                            <td><%= broker.pac_risk_fee_schedule.to_s + "%" %></td>
                            <td><%= broker.target_premium %></td>
                            <td>
                              <%= broker.street %>
                              <br />
                              <%= broker.city + ", " + broker.state + ". " + broker.zip %>
                            </td>
                            <td><%= broker.notes %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>

          </div>
        </div><!-- Row -->
      </div><!-- Main Wrapper -->

<!-- Javascripts -->
<%= content_for :js_includes do %>
  <%= javascript_include_tag 'jquery-mockjax-master/jquery.mockjax.js' %>
  <%= javascript_include_tag 'moment/moment.js' %>
  <%= javascript_include_tag 'datatables/js/jquery.datatables.min.js' %>
  <%#= javascript_include_tag 'x-editable/bootstrap3-editable/js/bootstrap-editable.js' %>
  <%#= javascript_include_tag 'bootstrap-datepicker/js/bootstrap-datepicker.js' %>
  <%= javascript_include_tag 'pages/table-data.js' %>
<% end %>
